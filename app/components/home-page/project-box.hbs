<div class="p-1 shadow-lg md:w-5/12 sm:w-10/12 h-1/4 m-2 bg-white rounded flex flex-col"
  {{on "mouseenter" (action (mut mouseIsOver) true)}}
  {{on "mouseleave" (action (mut mouseIsOver) false)}}
  >
  <img class="max-w-full h-16 m-3" src={{project.headerImg}}>
  <div class="flex flex-col content-center justify-center flex-grow">
    {{#liquid-if (not mouseIsOver) class='project-fade h-full flex flex-col content-center justify-center min-h-350px'}}
      <div class="flex flex-col justify-center content-center">
        <video class="w-auto m-auto min-h-250px"
        src={{project.videoUrl}}
        loop
        autoplay
        muted
        playsinline />
      </div>
    {{else}}
      <div class="">
        <p class="p-2 relative mt-2 inset-0 text-center sm:text-lg md:text-xs lg:text-base xl:text-xl" >{{project.desc}}</p>
        <div class="inset-x-0 flex bottom-0 mb-10">
          {{#if project.internalLink}}
            <a href={{project.internalLink}} class="flex-1 text-blue-500 self-center p-2 text-center sm:text-lg md:text-xs lg:text-base xl:text-xl">See it here</a>
          {{/if}}
          {{#if project.externalLink}}
            <a href={{project.externalLink}} class="flex-1 text-blue-500 self-center p-2 text-center sm:text-lg md:text-xs lg:text-base xl:text-xl">See it on Github</a>
          {{/if}}
        </div>
        <p class="p-1 text-indigo-900 bottom-0 inset-x-0 text-center sm:text-lg md:text-xs lg:text-base xl:text-lg">{{project.skillsUsed}}</p>
      </div>
    {{/liquid-if}}
  </div>
</div>
