<section class="bg-blue-200 p-20 flex flex-col text-gray-700">
  <div class="flex items-center my-4">
    <div class="hidden sm:block w-1/3"></div>
    <h3 class="w-full text-center sm:text-left sm:w-2/3 text-4xl">Skill Proficiency</h3>
  </div>
  {{#each skills as |skill|}}
    <div class="flex items-center justify-center flex-wrap">
      <div class="text-xl w-full text-center sm:text-left sm:w-2/6">
        {{skill.name}}
      </div>
      <div class="flex w-full sm:w-4/6 justify-center sm:justify-start">
        {{#each (range 1 6) as |x|}}
          <span class="fa-layers fa-4x">
            {{#if (gte skill.level x)}}
              <FaIcon @icon='square' class='text-blue-{{mult 100 (add skill.level 1)}}' @prefix='fas'/>
            {{/if}}
            <FaIcon @icon='square' class='text-gray-600' @prefix='far'/>
          </span>
        {{/each}}
      </div>
    </div>
  {{/each}}
</section>
