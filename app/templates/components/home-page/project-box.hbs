<div
  class="px-4 w-full md:w-1/2 my-4"
  {{on "mouseenter" (action (mut mouseIsOver) true)}}
  {{on "mouseleave" (action (mut mouseIsOver) false)}}
>
  <div class="bg-white rounded flex flex-col p-3 shadow">
    {{#if project.route}}
      {{#link-to project.route class="m-auto"}}
        <img
          class="max-w-full h-16 m-3 object-contain"
          src={{project.headerImg}}
        />
      {{/link-to}}
    {{else}}
      <img
        class="max-w-full h-16 m-3 object-contain"
        src={{project.headerImg}}
      />
    {{/if}}
    <div class="flex flex-col content-center justify-center flex-grow">
      {{#liquid-if
        (not mouseIsOver)
        class="project-fade h-full flex flex-col content-center justify-center"
      }}
        <div class="flex flex-col justify-center min-h-500px">
          <video
            class="w-auto m-auto min-h-250px"
            src={{project.videoUrl}}
            loop
            autoplay
            muted
            playsinline
          ></video>
        </div>
      {{else}}
        <div class="px-5 flex flex-col min-h-500px">
          <div
            class="flex flex-col items-center justify-center h-full flex-grow"
          >
            <div class="">
              {{project.desc}}
            </div>
            <div class="flex my-3 w-full justify-around">
              {{#if project.internalLink}}
                <a
                  href={{project.route}}
                  class="text-blue-500 border rounded-md border-solid border-blue-500 py-1 px-2"
                >
                  See it here
                </a>
              {{/if}}
              {{#if project.externalLink}}
                <a
                  href={{project.externalLink}}
                  class="text-blue-500 border rounded-md border-solid border-blue-500 py-1 px-2"
                >
                  See it on Github
                </a>
              {{/if}}
            </div>
          </div>
          <div class="py-1">
            {{#each project.skillsUsed as |s|}}
              <div
                class="inline-block rounded-md bg-gray-600 text-white text-xs py-1 px-2 m-1"
              >
                {{s}}
              </div>
            {{/each}}
          </div>
        </div>
      {{/liquid-if}}
    </div>
  </div>
</div>
